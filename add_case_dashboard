<body>

  <header>
    <h1>لوحة التحكم - منصة حياة</h1>
  </header>

  <div class="container">
    <h2>إضافة حالة جديدة</h2>
    <form id="caseForm">
      <input type="text" id="name" placeholder="اسم الحالة" required>
      <input type="text" id="city" placeholder="المدينة" required>
      <textarea id="beforeDesc" rows="3" placeholder="وصف الحالة قبل التبرع" required></textarea>
      <textarea id="afterDesc" rows="3" placeholder="وصف الحالة بعد التبرع (اختياري)"></textarea>
      <textarea id="thankMsg" rows="2" placeholder="رسالة شكر (اختياري)"></textarea>
      <button type="submit">حفظ الحالة</button>
    </form>

    <h2>كل الحالات</h2>
    <table>
      <thead>
        <tr>
          <th>الاسم</th>
          <th>المدينة</th>
          <th>قبل التبرع</th>
          <th>بعد التبرع</th>
          <th>رسالة الشكر</th>
          <th>إجراءات</th>
        </tr>
      </thead>
      <tbody id="casesTable">
        <!-- الحالات هتظهر هنا -->
      </tbody>
    </table>
  </div>

  <script>
    // بيانات تجريبية (لحد ما نربط مع Supabase)
    let cases = [];

    const form = document.getElementById('caseForm');
    const tableBody = document.getElementById('casesTable');

    // إضافة حالة جديدة
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const newCase = {
        id: Date.now(),
        name: document.getElementById('name').value,
        city: document.getElementById('city').value,
        beforeDesc: document.getElementById('beforeDesc').value,
        afterDesc: document.getElementById('afterDesc').value,
        thankMsg: document.getElementById('thankMsg').value
      };

      cases.push(newCase);
      form.reset();
      renderCases();
    });

    // عرض الحالات في الجدول
    function renderCases() {
      tableBody.innerHTML = "";
      cases.forEach(c => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${c.name}</td>
          <td>${c.city}</td>
          <td>${c.beforeDesc}</td>
          <td>${c.afterDesc || "-"}</td>
          <td>${c.thankMsg || "-"}</td>
          <td class="actions">
            <button class="edit-btn" onclick="editCase(${c.id})">تعديل</button>
            <button class="delete-btn" onclick="deleteCase(${c.id})">حذف</button>
          </td>
        `;
        tableBody.appendChild(row);
      });
    }

    // تعديل حالة
    function editCase(id) {
      const c = cases.find(cs => cs.id === id);
      if (!c) return;
      document.getElementById('name').value = c.name;
      document.getElementById('city').value = c.city;
      document.getElementById('beforeDesc').value = c.beforeDesc;
      document.getElementById('afterDesc').value = c.afterDesc;
      document.getElementById('thankMsg').value = c.thankMsg;
      deleteCase(id); // نحذف القديم وننتظر التحديث الجديد
    }

    // حذف حالة
    function deleteCase(id) {
      cases = cases.filter(cs => cs.id !== id);
      renderCases();
    }
  </script>
</body>
